
function Component()
{
    // default constructor
}

Component.prototype.createOperations = function() {
    // call default implementation to actually install README.txt!
    component.createOperations();

    if (systemInfo.productType === "windows")  {
        var execPath = "@TargetDir" + "@/maintenancetool.exe";
        var linkPath = "@StartMenuDir" + "@/Uninstall SpecView @SV_VERSION_NAME@.lnk";
        var workPath = "workingDirectory=@" + "TargetDir@"
        var icoPath = "iconPath=@" + "TargetDir@/share/icons/Maintenance.ico";
        component.addElevatedOperation("CreateShortcut", execPath, linkPath, workPath, icoPath,
                                        "description=Open SpecView Maintenance Tool");
    }
}
